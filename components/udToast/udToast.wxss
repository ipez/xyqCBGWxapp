/* components/udToast/udToast.wxss */
.toast-mask{
  position:absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
}
.toast-box {
  margin:auto; 
  z-index:999;       
  background: rgba(0,0,0,0.6);
  padding: 5rpx 25rpx;  
  border-radius: 20rpx; 
}  

.toast-text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
} 